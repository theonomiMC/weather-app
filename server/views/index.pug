extends layout

block layout-content
  div.Header
   div.Headertext
      h1 Weather Forecast
      form#formInput
        input.form-control#query(
        type="search" 
        placeholder="Search City …" 
        required
        )
        //- button.btn#btn(type='submit') Search
     
      
  div.Background 
    div.Weatherinfo
      h4.CityNames#city
      p#demo
      h4.Description#desc
      h4.Temperatur#temp
      h4.Wind#wind
      div.Weather-icon#weather-icon
        img(
          src="icons/unknown.png"
          alt="weather-icon"
        )

  block footer        
  footer
      p © #{new Date().getFullYear()} Current Weather by 
        a(href='https://github.com/theonomiMC') Natalia Theg 
        
